<h1 class="text-3xl font-bold my-8 text-center mb-4">Cart</h1>

<% if (cart.length === 0) { %>
    <p>No rentals added!</p>
<% } else {  
for(let i = 0; i < cart.length; i++) { %>
    <div class="rental-card">
      <h2><%= cart[i].headline %></h2>
      <h3>Subtotal: $<%= subtotal %></h3>
      <h3>VAT: $<%= vat %></h3>
      <p><%= cart[i].city %>, <%= cart[i].province %></p>
      <p>$<%= cart[i].pricePerNight %> per Night</p>
      <p><%= cart[i].numBedrooms %> Bedrooms</p>
      <p><%= cart[i].numBathrooms %> Bathrooms</p>
      <form method="POST" action="/cart/delete">
        <input type="hidden" name="rentalId" value="<%= cart[i]._id %>">
        <button type="submit">Delete</button>
      </form>
    </div>
<% }
} %>

<p>Grand Total: $<%= grandTotal %></p>